{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module":"commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": false,
        "declaration": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "strictNullChecks": true,
        "outDir": "dist",
        "declarationDir": "dist/types",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
      "**/*.test.ts"
    ]
}

